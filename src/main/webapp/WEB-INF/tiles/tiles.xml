<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <!-- Templates -->
    <definition name="baseLayout" template="/WEB-INF/jsp/layout/base-layout.jsp">
        <put-attribute name="header" value="/WEB-INF/jsp/layout/defaultHeader.jsp" />
        <put-attribute name="body" value="/WEB-INF/jsp/view/index.jsp" />
        <put-attribute name="footer" value="/WEB-INF/jsp/layout/defaultFooter.jsp" />
    </definition>

    <definition name="*" extends="baseLayout">
        <put-attribute name="body" value="/WEB-INF/jsp/view/{1}.jsp" />
    </definition>

</tiles-definitions>